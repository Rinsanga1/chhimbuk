<div class="bg-background-dark text-accent-pastel">
  <header class="p-4">
    <h1 class="text-3xl font-bold">chhimbuk</h1>
  </header>

  <main class="p-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <% @movies.each do |movie| %>
        <%= link_to movie_path(movie), class: "group" do %>
          <div class="bg-background-medium rounded-lg overflow-hidden transform group-hover:scale-105 transition-transform duration-200">
            <% if movie.thumbnail.attached? %>
              <%= image_tag movie.thumbnail, class: "w-full h-48 object-cover" %>
            <% else %>
              <div class="w-full h-48 bg-background-medium flex items-center justify-center">
                <span class="text-accent-pastel opacity-50">No Thumbnail</span>
              </div>
            <% end %>
            <div class="p-4">
              <h3 class="text-lg font-semibold truncate"><%= movie.title %></h3>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </main>
</div>
