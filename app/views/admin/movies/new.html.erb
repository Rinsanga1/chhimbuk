<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">New Movie</h1>

  <%= form_with(model: [:admin, @movie], class: "bg-background-medium shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-accent-pastel text-sm font-bold mb-2" %>
      <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= form.label :description, class: "block text-accent-pastel text-sm font-bold mb-2" %>
      <%= form.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", rows: 4 %>
    </div>

    <div class="mb-6">
      <%= form.label :thumbnail, class: "block text-accent-pastel text-sm font-bold mb-2" %>
      <%= form.file_field :thumbnail, class: "block w-full text-sm text-accent-pastel file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100" %>
    </div>

    <div class="mb-6">
      <%= form.label :video, class: "block text-accent-pastel text-sm font-bold mb-2" %>
      <%= form.file_field :video, class: "block w-full text-sm text-accent-pastel file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Create Movie", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'Back', admin_movies_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
